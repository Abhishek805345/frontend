<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>TodoSpace â€“ Tasks</title>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Inter", "Segoe UI", sans-serif;
    }

    body {
      background: #f7f8fa;
      min-height: 100vh;
      display: flex;
    }

    /* ================= SIDEBAR ================= */
    .sidebar {
      width: 230px;
      background: #ffffff;
      border-right: 1px solid #e5e7eb;
      padding: 20px;
      flex-shrink: 0;
    }

    .logo {
      font-size: 20px;
      font-weight: 700;
      color: #6c5ce7;
      margin-bottom: 30px;
    }

    .menu a {
      display: block;
      padding: 12px 14px;
      margin-bottom: 8px;
      text-decoration: none;
      color: #333;
      border-radius: 8px;
      font-size: 14px;
    }

    .menu a.active,
    .menu a:hover {
      background: #f0edff;
      color: #6c5ce7;
      font-weight: 600;
    }

    /* ================= MAIN ================= */
    .main {
      flex: 1;
      padding: 30px 40px;
    }

    .header {
      max-width: 1100px;
      margin-bottom: 25px;
    }

    .header h1 {
      font-size: 26px;
      font-weight: 600;
      color: #111827;
    }

    /* ================= TASK GRID ================= */
    .tasks-grid {
      max-width: 1100px;
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 18px;
    }

    .task-card {
      background: #ffffff;
      border-radius: 14px;
      padding: 18px;
      box-shadow: 0 8px 22px rgba(0,0,0,0.08);
      display: flex;
      flex-direction: column;
      gap: 10px;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .task-card:hover {
      transform: translateY(-3px);
      box-shadow: 0 12px 28px rgba(0,0,0,0.12);
    }

    .task-title {
      font-size: 15px;
      font-weight: 600;
      color: #111827;
    }

    .task-meta {
      font-size: 13px;
      color: #6b7280;
    }

    .status {
      font-size: 13px;
      font-weight: 600;
    }

    .status.completed {
      color: #16a34a;
    }

    .status.pending {
      color: #f59e0b;
    }

    .task-actions {
      display: flex;
      gap: 10px;
      margin-top: 8px;
    }

    .task-actions a {
      text-decoration: none;
      flex: 1;
    }

    .btn {
      width: 100%;
      padding: 8px;
      border-radius: 8px;
      border: none;
      font-size: 13px;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.2s ease;
    }

    .btn-edit {
      background: #6c5ce7;
      color: white;
    }

    .btn-edit:hover {
      background: #5848c2;
    }

    .btn-delete {
      background: #ef4444;
      color: white;
    }

    .btn-delete:hover {
      background: #dc2626;
    }

    /* ================= RESPONSIVE ================= */
    @media (max-width: 900px) {
      body {
        flex-direction: column;
      }

      .sidebar {
        width: 100%;
        display: flex;
        justify-content: space-between;
        border-right: none;
        border-bottom: 1px solid #e5e7eb;
      }

      .menu {
        display: flex;
        gap: 10px;
      }

      .menu a {
        padding: 8px 10px;
        font-size: 13px;
      }

      .main {
        padding: 20px;
      }
    }
  </style>
</head>

<body>

  <!-- SIDEBAR -->
  <div class="sidebar">
    <div class="logo">TodoSpace</div>
    <div class="menu">
      <a href="/addone">Add Tasks</a>
      <a href="/getdata" class="active">Tasks</a>
      <a href="/completed">Completed</a>
    </div>
  </div>

  <!-- MAIN -->
  <div class="main">
    <div class="header">
      <h1>Your Tasks</h1>
    </div>

    <div class="tasks-grid">
      <% data.forEach(item => { %>
        <div class="task-card">
          <div class="task-title"><%= item.task %></div>
          <div class="task-meta">Due: <%= item.date %></div>

          <% if (item.status === "completed") { %>
            <div class="status completed">Completed</div>
          <% } else { %>
            <div class="status pending">Pending</div>
          <% } %>

          <div class="task-actions">
            <a href="/edit/<%= item._id %>">
              <button class="btn btn-edit">Edit</button>
            </a>
            <a href="/task/delete/<%= item._id %>">
              <button class="btn btn-delete">Delete</button>
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

</body>
</html>
